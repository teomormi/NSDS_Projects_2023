<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>it.polimi.nsds.kafka</groupId>
  <artifactId>ContinousEvaluation</artifactId>
  <name>Continous Evaluation Project</name>
  <version>1</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <id>user</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>User_service</finalName>
              <outputDirectory>deliverables/JAR/</outputDirectory>
              <transformers>
                <transformer>
                  <mainClass>it.polimi.nsds.kafka.services.user.UserService</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>course</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>Course_service</finalName>
              <outputDirectory>deliverables/JAR/</outputDirectory>
              <transformers>
                <transformer>
                  <mainClass>it.polimi.nsds.kafka.services.course.CourseService</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>project</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>Project_service</finalName>
              <outputDirectory>deliverables/JAR/</outputDirectory>
              <transformers>
                <transformer>
                  <mainClass>it.polimi.nsds.kafka.services.project.ProjectService</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>registration</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>Registration_service</finalName>
              <outputDirectory>deliverables/JAR/</outputDirectory>
              <transformers>
                <transformer>
                  <mainClass>it.polimi.nsds.kafka.services.registration.RegistrationService</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>server</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>ServerHTTP</finalName>
              <outputDirectory>deliverables/JAR/</outputDirectory>
              <transformers>
                <transformer>
                  <mainClass>it.polimi.nsds.kafka.frontend.ServerHTTP</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.source>1.8</maven.compiler.source>
  </properties>
</project>
